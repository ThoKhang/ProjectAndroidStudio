<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Màu nền -->
    <solid android:color="@android:color/white" />
    <!-- Viền -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Bo góc -->
    <corners android:radius="12dp" />

    <!-- Padding trong viền -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"
        />
</shape>
